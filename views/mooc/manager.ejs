<html>
<head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/sematic/semantic.min.css"/>
    <script src="/jquery.js" crossorigin="anonymous"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="/sematic/semantic.min.js" crossorigin="anonymous"></script>
    <script src="/floatingNav.js"></script>
</head>

<body class="pushable">
<% include ../nav/navbar-floating.ejs%>

<div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

        <% include ../nav/navbar-personal.ejs %>

        <div class="ui text container">
            <br><br>
            <h1 class="ui inverted header">
                <%= title %>
            </h1>
            <h2>Manager your course!</h2>
            <br>
            <i class="down arrow icon"></i>
        </div>
    </div>

    <div class="ui vertical stripe segment">
        <div class="ui aligned stackable grid container">
            <div class="row">
                <!--侧边栏-->
                <div class="three wide column">
                    <div class="ui vertical labeled icon buttons tabular menu">
                        <button class="ui button active" data-tab="overview-edit"><i class="tag icon"></i> Overview </button>
                        <button class="ui button" data-tab="one-edit"><i class="bookmark icon"></i> Step One </button>
                        <button class="ui button" data-tab="two-edit"><i class="bookmark icon"></i> Step Two </button>
                        <button class="ui button" data-tab="three-edit"><i class="bookmark icon"></i> Step Three </button>
                    </div>
                    <br>
                    <button class="ui basic pink button" onclick="addNewStep()">Add New Step</button>
                </div>
                <!--右侧内容区-->
                <div class="thirteen wide right floated column">
                    <% include course-overview-edit.ejs %>

                    <% include course-steps-edit.ejs %>

                    <% include course-new-step.ejs %>

                </div>
            </div>
        </div>
    </div>

    <% include ../footer.ejs %>
</div>

<!--以下为点击change guide时弹出的页面-->
<div class="ui modal" id="new-guide">
    <i class="close icon"></i>
    <div class="header" id="detailName">
        New Gudie
    </div>
    <div class="content">
        <form class="ui form" action="" method="post">
            <div class="field aligned">
                <input type="file" name="upload-file">
            </div>
            <button class="ui positive right floated labeled icon button" type="submit">Yes <i class="checkmark icon"></i> </button>
            <br>
        </form>
    </div>
</div>

<!--以下为add step时弹出的页面-->
<div class="ui modal" id="add-step">
    <i class="close icon"></i>
    <div class="header">
        Add New Step
    </div>
    <div class="ui form">
        <div class="ui stacked segment">
            <div class="field" id="step-name">
                <label>Step Name</label>
                <div class="ui input">
                    <input placeholder="Mooc Name" type="text">
                </div>
            </div>
            <div class="field">
                <label>Content</label>
                <div class="ui input">
                    <textarea id="step-content"></textarea>
                </div>
            </div>
            <div class="field" id="step-guide">
                <label>Guide</label>
                <div class="ui input">
                    <input type="file">
                </div>
            </div>
            <div class="actions">
                <button class="ui green submit button approve">ok</button>
            </div>
        </div>
    </div>
</div>


<script>
    $('.tabular.menu .button').tab();

    function overEditDeal() {
        $('#over-edit-form').transition('vertical flip');
        $('#over-edit-content').text($('#over-content').text());
        $('#over-edit-btn').transition('fly left');
    };

    function overSubmit() {
        $('#over-edit-form').transition('vertical flip');
        $('#over-edit-btn').transition('fly left');
    };

    function stepEditDeal(id) {
        $('#' + id + '-edit-form').transition('vertical flip');
        $('#' + id + '-edit-content').text($('#' + id + '-content').text());
        $('#' + id + '-edit-btn').transition('fly left');
    };

    function stepSubmit(id) {
        $('#' + id + '-edit-form').transition('vertical flip');
        $('#' + id + '-edit-btn').transition('fly left');
    };

    function changeGuide(id) {
        $('#new-guide').modal('show');
    };

    function addNewStep() {
        $('#add-step').modal('show');
    };

</script>

</body>

</html>
