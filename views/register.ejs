<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/sematic/semantic.min.css"/>
    <script src="/jquery.js" crossorigin="anonymous"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="/sematic/semantic.min.js" crossorigin="anonymous"\></script>
    <script src="/floatingNav.js"></script>
</head>
<body class="pushable">

<% include ./nav/navbar-floating.ejs%>

<div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

        <% include ./nav/navbar-public.ejs %>

        <div class="ui text container">
            <br><br>
            <h1 class="ui inverted header">
                Sign up
            </h1>
            <h2>Come to us!</h2>
            <br>
            <i class="down arrow icon"></i>
            <br>
        </div>
    </div>

    <div class="ui vertical stripe segment">
        <br><br>
        <div class="ui middle aligned center aligned grid">
            <div class="row">
                <div class="six wide column">
                    <form class="ui large form" action="" method="post" id="form">
                        <div class="ui stacked segment">
                            <div class="two fields">
                                <div class="field" id="first-name">
                                    <label>First Name</label>
                                    <div class="ui left icon input">
                                        <i class="spy icon"></i>
                                        <input placeholder="First Name" type="text">
                                    </div>
                                </div>
                                <div class="field" id="last-name">
                                    <label>Last Name</label>
                                    <div class="ui left icon input">
                                        <i class="child icon"></i>
                                        <input placeholder="Last Name" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="field" id="email">
                                <label>E-mail</label>
                                <div class="ui left icon input">
                                    <i class="mail icon"></i>
                                    <input type="email" placeholder="email">
                                </div>
                            </div>
                            <div class="two fields" id="passwords">
                                <div class="field" id="password">
                                    <label>Password</label>
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input placeholder="Password" type="password">
                                    </div>
                                </div>
                                <div class="field" id="re-password">
                                    <label>Repeat</label>
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input placeholder="Password" type="password">
                                    </div>
                                </div>
                            </div>
                            <div class="ui error message">
                                <div class="header">Error</div>
                                <p>Two passwords don't match!</p>
                            </div>
                            <button class="ui fluid large green submit button" type="submit">Sign up</button>
                        </div>
                    </form>
                    <div class="ui message">
                        I have a acount <a href="/login">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
        <br><br><br>
    </div>
    <%include footer.ejs%>
</div>

</body>

</html>
<script>
    $("body").css('height',$(window).height());

    function errorDemo() {
        // 输出两次密码不一样
        $("#form").addClass("error");

        // first name有问题
        $("#first-name").addClass("error");

        // last name有问题
        $("#last-name").addClass("error");

        // email有问题
        $("#email").addClass("error");

        // password有问题
        $("#password").addClass("error");

        // re-password有问题
        $("#re-password").addClass("error");
    };
</script>