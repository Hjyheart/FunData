    };

    function showDiscuss() {
        // show discuss
        $('#discuss-area').transition('fade up');
        if ($('#discuss-btn').text() === 'discuss')
            $('#discuss-btn').text('close discuss');
        else
            $('#discuss-btn').text('discuss')
    };

    function mySubmitions() {
        // show my submitions
    };

    function showRank() {
        // show rank
    };

    function showAnswer() {
        // show answer 未结束之前disabled
    };


</script>

</html>